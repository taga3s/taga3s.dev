{
  "ext": "mdx",
  "outputPath": "./app/routes/posts",
  "frontmatter": [
    {
      "name": "title",
      "type": "text",
      "question": "Please enter `title`",
      "placeholder": "title",
      "required": true
    },
    {
      "name": "description",
      "type": "text",
      "question": "Please enter `description`",
      "placeholder": "description",
      "required": true
    },
    {
      "name": "category",
      "type": "select",
      "options": ["tech", "weekly", "others"],
      "required": true
    },
    {
      "name": "publishedAt",
      "type": "text",
      "question": "Please enter `published_at`",
      "placeholder": "2000/01/01",
      "required": true
    }
  ]
}
