{
  "name": "taga3s-dev-website",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "build:website": "turbo build --filter=@taga3s/website",
    "test": "turbo test",
    "lint": "biome lint --write --unsafe ./apps/website ./apps/images-worker",
    "format": "biome format --write ./apps/website ./apps/images-worker ./scripts package.json biome.json"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "turbo": "^2.5.8"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "pnpm run lint && pnpm run format"
  },
  "packageManager": "pnpm@10.17.0"
}
