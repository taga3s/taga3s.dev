{
  "name": "taga3s-dev-website",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "pnpm build && wrangler deploy",
    "lint": "biome lint --write --unsafe ./app",
    "format": "biome format --write ./app ./scripts package.json biome.json tsconfig.json",
    "test": "vitest run",
    "generate:rss": "node --import @swc-node/register/esm-register ./scripts/generate-rss.ts",
    "install-puppeteer": "puppeteer browsers install chrome"
  },
  "dependencies": {
    "hono": "^4.6.20",
    "honox": "^0.1.33"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250406.0",
    "@hono/vite-build": "^1.6.0",
    "@hono/vite-dev-server": "^0.19.0",
    "@mdx-js/rollup": "^3.1.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.24",
    "@taga3s/rss-generator": "npm:@jsr/taga3s__rss-generator@^0.1.8",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "hast": "^1.0.0",
    "hast-util-to-html": "^9.0.5",
    "mdast": "^3.0.0",
    "puppeteer": "^24.8.0",
    "rehype-parse": "^9.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-extract-frontmatter": "^3.2.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.1.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "shiki": "^3.3.0",
    "to-vfile": "^8.0.0",
    "unified": "^11.0.5",
    "unist": "^0.0.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.0.10",
    "vitest": "^3.1.2",
    "wrangler": "^4.7.2",
    "yaml": "^2.7.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "pnpm run lint && pnpm run format"
  },
  "packageManager": "pnpm@10.12.1"
}
