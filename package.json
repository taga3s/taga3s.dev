{
  "name": "taga3s-dev-website",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev",
    "deploy": "vite build --mode client && vite build && wrangler pages deploy ./dist",
    "lint": "biome lint --write --unsafe ./app",
    "format": "biome format --write ./app package.json biome.json tsconfig.json",
    "test": "vitest run",
    "article": "speedymd",
    "install-puppeteer": "puppeteer browsers install chrome"
  },
  "dependencies": {
    "hono": "^4.6.20",
    "honox": "^0.1.33"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250129.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.1",
    "@mdx-js/rollup": "^3.1.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "hast": "^1.0.0",
    "hast-util-to-html": "^9.0.4",
    "mdast": "^3.0.0",
    "puppeteer": "^24.1.1",
    "rehype-parse": "^9.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "shiki": "^3.0.0",
    "unified": "^11.0.5",
    "unist": "^0.0.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.0.10",
    "vitest": "^3.0.0",
    "wrangler": "^3.107.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "pnpm run lint && pnpm run format"
  },
  "packageManager": "pnpm@10.5.2"
}
