{
  "name": "taga3s-dev-website",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "dev:website": "pnpm --filter=@taga3s/website dev",
    "dev:images-worker": "pnpm --filter=@taga3s/images-worker dev",
    "build:website": "pnpm --filter=@taga3s/website build",
    "build:images-worker": "pnpm --filter=@taga3s/images-worker build",
    "lint": "biome lint --write ./apps/website ./apps/images-worker package.json biome.json renovate.json",
    "format": "biome format --write ./apps/website ./apps/images-worker package.json biome.json renovate.json",
    "test:website": "pnpm --filter=@taga3s/website test",
    "check": "biome check --write ./apps/website ./apps/images-worker package.json biome.json renovate.json",
    "check:ci": "biome ci"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "pnpm run lint && pnpm run format"
  },
  "packageManager": "pnpm@10.26.1"
}
