{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExtraNonNullAssertion": "warn",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useShorthandFunctionType": "off"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noImportantStyles": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "files": {
    "includes": ["./apps/website/**", "./apps/images-worker/**", "!**/dist", "!**/node_modules"]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
